<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/list_not_found"
        android:textSize="16sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="-44dp">


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="기본 정보"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="정보 수정"
                android:textColor="@color/turquoise_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white_grey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청날짜"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        tools:text="2021년 07월 19일" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청자"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_applicant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        tools:text="김유진" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        tools:text="010-1906-0000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방문주소"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_visit_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        tools:text="서울특별시 용산구 청파로 47길 100 (청파동)" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="*는 필수 입력 내용입니다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="해충 종류*"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_bug"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="발견 날짜*"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_find_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="발견 장소*"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_find_spot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:text="방 개수*"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_room_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    tools:text="222" />

            </LinearLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="이전에도 같은 벌레가 나온 적이 있나요?*"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/has_bug_been_shown_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:text="네"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아니오"
                    android:textSize="15dp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="방문 가능한 기간을 알려주세요*"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/visit_time_start"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_wanted_start_year"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="년"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/tv_wanted_start_month"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="월"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/tv_wanted_start_day"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="일"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_visit_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/visit_time_end"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_wanted_end_year"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="년"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/tv_wanted_end_month"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="월"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/tv_wanted_end_day"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_r70_with_black_line"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="일"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_visit_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="방문 가능한 시간대를 알려주세요 (복수선택 가능)*"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/wanted_time_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_anytime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="언제든 좋아요. 최대한 빨리 와주세요." />

                <RadioButton
                    android:id="@+id/rb_9_to_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="09:00 AM - 12:00 PM" />

                <RadioButton
                    android:id="@+id/rb_13_to_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="13:00 AM - 16:00 PM" />

                <RadioButton
                    android:id="@+id/rb_16_to_19"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="16:00 AM - 19:00 PM" />

                <RadioButton
                    android:id="@+id/rb_19_to_22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="19:00 AM - 22:00 PM" />
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="추가적인 요청 사항이 있다면 남겨주세요"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_extra_message"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginTop="20dp"
                android:backgroundTintMode="multiply"
                android:ems="10"
                android:gravity="top"
                android:hint="예) 되도록 주말은 피해주세요"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_r70_with_green_line"
                android:backgroundTint="@color/turquoise_green"
                android:text="제출하기"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>