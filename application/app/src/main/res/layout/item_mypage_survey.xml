<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    tool:layout_width="190dp">

    <ImageView
        android:id="@+id/iv_bug_bg"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/bg_mypage_bug_bg"
        android:backgroundTint="@color/marigold"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:src="@drawable/ic_silverfish" />

    <ImageView
        android:id="@+id/iv_bug_description_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_mypage_bug_description_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bug_bg" />

    <TextView
        android:id="@+id/tv_bug_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/brown_grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_bug_description_bg"
        app:layout_constraintEnd_toStartOf="@id/tv_survey_date"
        app:layout_constraintStart_toStartOf="@id/iv_bug_description_bg"
        app:layout_constraintTop_toTopOf="@id/iv_bug_description_bg"
        tool:text="빈대" />

    <TextView
        android:id="@+id/tv_survey_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설문 일자"
        android:textColor="@color/brown_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_survey_date"
        app:layout_constraintStart_toStartOf="@id/tv_survey_date"
        app:layout_constraintTop_toTopOf="@id/iv_bug_description_bg" />

    <TextView
        android:id="@+id/tv_survey_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/brown_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_bug_description_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_survey_title"
        tool:text="2022년 1월 28일" />
</androidx.constraintlayout.widget.ConstraintLayout>